<div class="card shadow mb-4 mt-2">
  <div class="card-header py-3">
    <a href="/admin/booking" class="btn btn-warning">Back</a>
  </div>
  <div class="card-body">
    <div class="row">
      <div class="col-lg-4">
        <div class="mw-100 h-auto">
          <img
            src="<%= booking.payments.proofPayment%>"
            alt="Bukti bayar"
            class="mw-100 h-auto"
          />
        </div>
        <div class="row justify-content-center">
          <% if(booking.payments.status == 'Proses'){ %>
          <form
            action="/admin/booking/<%= booking.id %>/confirm?_method=PUT"
            method="post"
            class="mx-2"
          >
            <button type="submit" class="btn btn-success btn-sm">
              <i class="fas fa-check"> Confirmation</i>
            </button>
          </form>
          <form
            action="/admin/booking/<%= booking.id %>/reject?_method=PUT"
            method="post"
            class="mx-2"
          >
            <button type="submit" class="btn btn-danger btn-sm">
              <i class="fas fa-times"> Reject</i>
            </button>
          </form>
          <%}%>
        </div>
      </div>
      <div class="col-md-8">
        <div class="table-responsive">
          <table
            class="table table-bordered"
            id="dataTableActivity"
            width="100%"
            cellspacing="0"
          >
            <thead>
              <tr>
                <th>Member Name</th>
                <th>Total</th>
                <th>Bank</th>
                <th>Title</th>
              </tr>
            </thead>
            <tbody>
              <tr>
                <td>
                  <%= booking.memberId.firstName %> <%=
                  booking.memberId.lastName %>
                </td>
                <td>$ <%= booking.total %></td>
                <td><%= booking.payments.bankFrom %></td>
                <td><%= booking.itemId.title %></td>
              </tr>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>
</div>
